<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Верхняя панель -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Назад"/>

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Введите адрес или улицу"
            android:padding="8dp"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginStart="8dp"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_search"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Search"
                android:scaleType="centerInside"/>

            <ImageButton
                android:id="@+id/photoButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_camera"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Добавить фото"
                android:scaleType="centerInside"/>

            <ImageButton
                android:id="@+id/trafficButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_directions"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Пробки"
                android:scaleType="centerInside"/>

            <ImageButton
                android:id="@+id/myLocationButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_mylocation"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Моё местоположение"
                android:scaleType="centerInside"/>
        </GridLayout>
    </LinearLayout>

    <!-- Нижние кнопки -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/showDataButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Показать данные"/>

        <Button
            android:id="@+id/btnClearData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Очистить данные"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>

</RelativeLayout>
